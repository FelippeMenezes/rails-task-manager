<div class="container mt-1">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1><%= @task.title %></h1>
      <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-secondary" %>
    </div>
    <div class="card-body">
      <p><strong>Title:</strong> <%= @task.title %></p>
      <p><strong>Details:</strong> <%= @task.details %></p>
      <%= form_with(model: @task, method: :patch) do |f| %>
        <div class="form-check">
          <%= f.check_box :completed, class: 'form-check-input', onchange: 'this.form.submit()' %>
          <%= f.label :completed, 'Completed', class: 'form-check-label' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to "Back to all tasks", tasks_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
