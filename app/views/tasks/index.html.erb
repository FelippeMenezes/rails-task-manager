<div class="d-flex flex-column align-items-center">
  <%= link_to "New Task", new_task_path, class: "btn btn-primary m-2"%>
</div>
<div class="d-flex flex-column align-items-center">
  <ul>
      <% @tasks.each do | task | %>
          <ul>
          <div class="d-flex align-items-center">
            <%= form_with(model: task, method: :patch) do |f| %>
              <div class="form-check">
                <%= f.check_box :completed, class: 'form-check-input', onchange: 'this.form.submit()' %>
              </div>
            <% end %>
            <%= link_to task.title, task_path(task), class: "task-title" %>
            <%= link_to task_path(task), class: "ms-3", data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
          </ul>
      <% end %>
  </ul>
</div>
