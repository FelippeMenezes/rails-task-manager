<div class="container">

    <%= form_with model: @task do |f| %>
    <div class="mb-1">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <%= hidden_field_tag :source, 'edit_form' %>

    <div class="mb-1">
        <%= f.label :details, class: "form-label" %>
        <%= f.text_field :details, class: "form-control" %>
    </div>

    <div class="mb-1">
        <%= f.label :completed, class: "form-label" %>
        <%= f.select :completed, [['Yes', true], ['No', false]], {}, { class: "form-select" } %>
    </div>

    <%= f.submit class: "btn btn-primary m-0" %>
    <% end %>

    <%= link_to "Back to all tasks", tasks_path, class: "btn btn-secondary mt-2" %>
</div>